<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gradecal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:text="Grade Calculator:"
        android:textColor="#4A148C"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/quizes"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:background="#B388FF"
        android:ems="10"
        android:hint="Quizes %"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/homework"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:background="#B388FF"
        android:ems="10"
        android:hint="Homework %"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/midterms"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:background="#B388FF"
        android:ems="10"
        android:hint="Mid terms %"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/finals"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:background="#B388FF"
        android:ems="10"
        android:hint="Finals %"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:background="#FFAB91"
        android:ems="10"
        android:text="Calculate" />

    <Button
        android:id="@+id/reset"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="05dp"
        android:background="#94DCFB"
        android:ems="10"
        android:text="Reset" />

    <TextView
        android:id="@+id/a"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="0dp"
        android:textColor="#43A047"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/b"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="0dp"
        android:textColor="#FF2787"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/c"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="0dp"
        android:textColor="#F9A825"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/d"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="0dp"
        android:textColor="#FB3C00"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/f"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="0dp"
        android:textColor="#6E0000"
        android:textSize="30sp" />


</LinearLayout>